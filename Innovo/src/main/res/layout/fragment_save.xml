<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_puzzle_runner_margin"
    android:layout_marginRight="@dimen/activity_puzzle_runner_margin"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    tools:context="mandj.appbuildin.codingcoach.innovo.Save">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button2"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:clickable="false"
        android:elevation="@dimen/cardview_default_elevation"
        card_view:cardCornerRadius="3dp"
        card_view:contentPadding="5dp">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true">

            <TextView
                android:id="@+id/saveTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="SAVE HERE"
                android:textSize="18sp" />

        </ScrollView>


    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Internal Save" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="External Save" />

</RelativeLayout>
