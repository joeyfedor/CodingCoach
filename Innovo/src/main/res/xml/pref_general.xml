<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_display_name"
        android:inputType="textCapWords"
        android:key="example_text"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_display_name" />

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="example_checkbox"
        android:summary="@string/pref_description_vibrate"
        android:title="@string/pref_vibrate_toggle" />

    <!-- This Check Box enables or disables the lined text box on the Puzzle Runner-->

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="lined_checkbox"
        android:summary="@string/pref_description_lined_toggle"
        android:title="@string/pref_lined_toggle" />

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="debugging"
        android:summary="@string/pref_debugging_description"
        android:title="@string/pref_debugging" />

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="useServer"
        android:summary="Decides whether the device should use the server (for compiling) or not"
        android:title="Offline Mode"
        />


    <!-- NOTE: EditTextPreference accepts EditText attributes. -->

    <!-- NOTE: ListPreference's summary should be set to its value by the activity code.

    <ListPreference
        android:key="example_list"
        android:title="@string/pref_title_add_friends_to_messages"
        android:defaultValue="-1"
        android:entries="@array/pref_example_list_titles"
        android:entryValues="@array/pref_example_list_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />
-->
</PreferenceScreen>
